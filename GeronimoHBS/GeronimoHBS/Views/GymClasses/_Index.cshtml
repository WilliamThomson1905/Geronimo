@model GeronimoHBS.Models.Location

@{
    ViewBag.Title = "Index";
}

<h2>Gym Classes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Introduction
        </th>
        <th>
            Description
        </th>
        <th>
            Benefits
        </th>
        <th>
            Focus
        </th>
        <th>
            Location Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.GymOverview.GymClasses) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Introduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Benefits)
        </td>
        <td>
            @foreach (var focus in item.Focus)
            {


                @Html.DisplayFor(modelItem => focus.DisplayTitle)




            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GymOverview.Location.LocationName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "GymClasses", new { id=item.GymClassesID }) |
            @Html.ActionLink("Details", "Details", "GymClasses", new { id=item.GymClassesID }) |
            @Html.ActionLink("Delete", "Delete", "GymClasses", new { id=item.GymClassesID })
        </td>
    </tr>
}

</table>
