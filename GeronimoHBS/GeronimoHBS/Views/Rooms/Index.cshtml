@model GeronimoHBS.Models.Location
@using GeronimoHBS.Models


@{
    ViewBag.Title = "RoomAvailability";
    int i; 
}

@{ Html.RenderPartial("_Breadcrumbs");}


    <div class="container">

        <h2>Rooms Information View</h2>
        <h2>
            @Html.DisplayFor(modelItem => Model.RoomOverview.Header)
        </h2>

        <p>
            @Html.DisplayFor(modelItem => Model.RoomOverview.IntroductionParagraph)
        </p>
        <p>
            @Html.DisplayFor(modelItem => Model.RoomOverview.MainContent)
        </p>
        <p>
            @Html.DisplayFor(modelItem => Model.RoomOverview.SecondaryContent)
        </p>
        @{ i = 1;}

        <p>There are @Model.RoomOverview.RoomType.Count() types of room available at Geronimo Hotels @Model.LocationName</p>
        @foreach (var item in Model.RoomOverview.RoomType)
        {

            <div>
                <h3>@item.Name</h3>
                <p>
                    @item.Description
                </p>
                <p>
                    Free Wifi is available throughout all our Hotels.
                </p>
            </div>
            i++;
        }
        <p>
            <a href="/Rooms/RoomSelection/@Model.LocationID" class="button primary">Room Selection</a>
        </p>

    </div>
