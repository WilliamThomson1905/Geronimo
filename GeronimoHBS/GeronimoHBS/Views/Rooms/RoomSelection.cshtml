
@{
    ViewBag.Title = "RoomAvailability";
}

@{ Html.RenderPartial("_Breadcrumbs");}

<div class="container">

    <div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            <h2>Make selection</h2>
            <p>
                Fill in form details
                <ol>
                    <li>
                        Location
                    </li>
                    <li>
                        Guests - total guests
                    </li>
                    <li>
                        Rooms - count of rooms required -
                    </li>
                    <li>
                        Choose from selection. Start date -> End date
                    </li>
                    <li>
                        Show the availability of rooms.
                    </li>


                </ol>
                @Html.ActionLink("Show Availability", "Availability", "Rooms", new { @class = "button primary" })
            </p>

        }

        <div>
            @Html.ActionLink("Back to List", "Index", "Rooms",  new { @class= "secondaryLink" })
        </div>


    </div>
</div>


