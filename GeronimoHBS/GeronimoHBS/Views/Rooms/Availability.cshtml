@model GeronimoHBS.Models.Location
@using GeronimoHBS.Models

@{
    ViewBag.Title = "RoomAvailability";
}

@{ Html.RenderPartial("_Breadcrumbs");}

    <div class="secondaryContainer">
        @using (Html.BeginForm("Payment", "Rooms", FormMethod.Post))
        {

            <h2>@Model.LocationName Room Availability: @ViewBag.FirstName</h2>
            <br />
            foreach (Room room in ViewBag.Rooms)
            {
                <div class="box">
                    
                    <div class="roomContainer">
                        <h2><b>@room.Name - @room.RoomType.Name</b></h2>
                        <p>@room.Description</p>
                        <p>Room @room.RoomNumber / Floor @room.FloorNumber</p>
                        <p>No of Beds: @room.NumberOfBeds</p>
                        <p>Price: @room.Price</p>
                        <p>Max Capacity: @room.Capacity</p>
                        <p>
                            Amenities:
                            @foreach (Amenity amenity in room.Amenities)
                            {
                                <span>@amenity.Name</span>
                            }
                        </p>
                        @*<p>RoomStatus: @room.RoomStatus.RoomStatusName</p>*@
                        <div class="selectRoom">
                            <label for="RoomsSelected@(room.RoomID)" class="checkboxContainer">
                              <input id="RoomsSelected@(room.RoomID)" type="checkbox" name="RoomsSelected" value=@room.RoomID />
                              <span class="checkmark"></span>
                            </label>
                           
                        </div>
                    </div>

                </div>


            }


            <button type="submit" class="button primary"><i class="fa fa-search"></i>Payment</button>
