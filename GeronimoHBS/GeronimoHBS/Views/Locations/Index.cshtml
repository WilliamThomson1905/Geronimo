@model IEnumerable<GeronimoHBS.Models.Location>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationIntroduction)
            </th>
            <th>
                Has Rooms
            </th>
            <th>
                Has Gym
            </th>
            <th>
                Has Spa
            </th>
            <th>
                Has Venues
            </th>
            <th>
                Has Dining
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationIntroduction)
                </td>
                <td>
                    @if (item.RoomOverview != null)
                    {
                        @Html.Raw("Yes");
                    }
                    else
                    {
                        @Html.Raw("No");
                    }

                </td>
                <td>
                    @if (item.GymOverview != null)
                    {
                        @Html.ActionLink("YES", "GymOverview", new { id = item.LocationID }); 

                    }
                    else
                    {
                        @Html.Raw("No");
                    }

                </td>
                <td>
                    @if (item.SpaOverview != null)
                    {
                        @Html.Raw("Yes");
                    }
                    else
                    {
                        @Html.Raw("No");
                    }

                </td>
                <td>
                    @if (item.EventOverview != null)
                    {
                        @Html.Raw("Yes");
                    }
                    else
                    {
                        @Html.Raw("No");
                    }

                </td>
                <td>
                    @if (item.DiningOverview != null)
                    {
                        @Html.Raw("Yes");
                    }
                    else
                    {
                        @Html.Raw("No");
                    }

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LocationID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationID })
                </td>
            </tr>
        }

    </table>
</div>