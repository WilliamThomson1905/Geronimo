@model GeronimoHBS.Models.Location

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Location</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.LocationID)

    <div class="form-group">
        @Html.LabelFor(model => model.LocationName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LocationName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LocationName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LocationIntroduction, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LocationIntroduction, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LocationIntroduction, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <h6>Choose Facilities of Location</h6>
    <div>
        <div class="table-responsive">

            <table class="table">
                <tr>
                    <th> Facility </th>
                    <th>Select</th>
                </tr>
                <tr>
                    <td>
                        Has Rooms
                    </td>
                    <td>
                        @if (Model.RoomOverview != null)
                        {
                            <input id="rooms" type="checkbox" name="hotelFacilities" value="Rooms" checked/>
                        }
                        else
                        {
                            <input id="rooms" type="checkbox" name="hotelFacilities" value="Rooms" />
                        }
                        <label for="rooms">Rooms?</label>

                    </td>
                </tr>
                <tr>
                    <td>
                        Has Gym
                    </td>
                    <td>@if (Model.RoomOverview != null)
                        {
                            <input id="gym" type="checkbox" name="hotelFacilities" value="Gym" checked/>
                        }
                        else
                        {
                            <input id="gym" type="checkbox" name="hotelFacilities" value="Gym" />
                        }
                        <label for="gym">Gym?</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        Has Spa
                    </td>
                    <td>
                        @if (Model.SpaOverview != null)
                        {
                            <input id="spa" type="checkbox" name="hotelFacilities" value="Spa" checked/>
                        }
                        else
                        {
                            <input id="spa" type="checkbox" name="hotelFacilities" value="Spa" />
                        }
                        <label for="spa">Spa?</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        Has Venues
                    </td>
                    <td>
                        @if (Model.EventOverview != null)
                        {
                            <input id="venues" type="checkbox" name="hotelFacilities" value="Venues" checked/>
                        }
                        else
                        {
                            <input id="venues" type="checkbox" name="hotelFacilities" value="Venues" />
                        }
                        <label for="venues">Venues?</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        Has Dining
                    </td>
                    <td>
                        @if (Model.DiningOverview != null)
                        {
                            <input id="dining" type="checkbox" name="hotelFacilities" value="Dining" checked/>
                        }
                        else
                        {
                            <input id="dining" type="checkbox" name="hotelFacilities" value="Dining" />
                        }
                        <label for="dining">Dining?</label>
                    </td>
                </tr>

            </table>

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
