<style>
    ul.breadcrumb {
        margin-bottom: 50px;
        padding: 10px 16px;
        list-style: none;
        background-color: #eee;
    }

        ul.breadcrumb li {
            display: inline;
            font-size: 14px;
        }

            ul.breadcrumb li + li:before {
                padding: 8px;
                color: black;
                content: "/\00a0";
            }

            ul.breadcrumb li a {
                color: #555555;
                text-decoration: none;
            }

                ul.breadcrumb li a:hover {
                    color: black;
                    text-decoration: underline;
                }
</style>


<ul class="breadcrumb">
    @for (int i = 0; i < ViewBag.Collection.Length; i++)
    {

        <li>
            <a href="@ViewBag.Collection[i][1]">@ViewBag.Collection[i][0]</a>
        </li>
        
    }

